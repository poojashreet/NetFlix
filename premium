package assign;

public class Premium implements Netflix 
{
	String name;
	int money;
	double balance;
Premium(String name,int money,double balance)
{
	this.name=name;
	this.money=money;
	this.balance=balance;
}
public void payment(int amt) {
	int days=365;
	if(days<=365)
	{
	balance=balance-amt;
	System.out.println("balance RS"+amt);
}
}
 public void check(int amt)
 {
	 if(amt<=balance)
	 {
		 balance=balance-amt;
		 System.out.println("balance is"+balance);
	 }
	 else
		 System.out.println("not done");
 }
}


